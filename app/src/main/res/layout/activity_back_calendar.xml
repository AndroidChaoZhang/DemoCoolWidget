<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:gravity="bottom"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="返程"
        android:textColor="@color/Color_gray2"
        android:background="@drawable/shape_right_bottom_line"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="right"
        android:textSize="12sp"
        android:text="去程"
        android:textColor="@color/Color_gray2"/>

    <View
        android:layout_width="1px"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:scaleY="1.4"
        android:background="@color/line_gray"
        android:rotation="135"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_left"
        android:layout_marginTop="60dp"
        android:layout_width="60dp"
        android:layout_above="@+id/rl_bottom"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/section_list"
        android:layout_below="@id/rv_top"
        android:layout_marginLeft="60dp"
        android:layout_above="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:visibility="gone"
        android:background="@color/common_dark"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_travel_date_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/rl_travel_price"
            android:textSize="13sp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/rl_travel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@+id/tv_confirm">
            <TextView
                android:id="@+id/tv_travel_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="往返总价"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_travel_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_travel_price_title"
                android:layout_alignRight="@id/tv_travel_price_title"
                android:textColor="@color/white"
                android:text="¥--"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="90dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/btn_white_nor"
            android:text="确定"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@color/base_line"
        android:text="跳转菱形案例页面"
        android:gravity="center"
        android:onClick="startLingXing"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
