<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_sign_up_sign"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
     xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#B1000E"/>
        <com.zc.democoolwidget.water.SignUpRelativeLayout
            android:id="@+id/surl_animal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:rb_color="#FF9191"
            app:rb_radius="50dp"
            app:rb_rippleAmount="2"
            app:rb_duration="2500"
            app:rb_scale="1.2">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_sign_oval_red"
                    android:text="签到成功"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/iv_sign_already"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tv_sign_up_sign"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_sign_oval"
                    android:text="签到"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#B1000E"
                    android:gravity="center"
                    android:drawableBottom="@drawable/icon_sign_red"
                    android:layout_centerInParent="true"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"/>
        </com.zc.democoolwidget.water.SignUpRelativeLayout>
</RelativeLayout>